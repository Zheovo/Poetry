<script>
    function expandPoem(poemId) {
        document.getElementById('overlay').style.display = 'block';
        document.getElementById('poem' + poemId).style.display = 'block';
    }

    function closePoem() {
        document.getElementById('overlay').style.display = 'none';
        var poems = document.getElementsByClassName('expanded-poem');
        for (var i = 0; i < poems.length; i++) {
            poems[i].style.display = 'none';
        }
    }
</script>

